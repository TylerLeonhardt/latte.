	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wearbucks.app.MainActivity" >
    
     <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Wearbucks"
        android:textSize="26dp"
        android:layout_marginTop="40dp"
        />
    
    <RelativeLayout
	         android:id="@+id/step_one"
	         android:layout_height="wrap_content"
	         android:layout_width="fill_parent"
	         android:layout_alignParentLeft="true"
	         android:layout_below="@id/welcome_text"
	         android:layout_marginTop="45dp" >
    
		    <ImageView
		        android:id="@+id/step_one_image"
		        android:layout_width="45dp"
		        android:layout_height="45dp"
		        android:scaleType="fitXY"
		        android:src="@drawable/step_one" 
		        android:layout_centerVertical="true"
		        />
		    
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/step_one_detail" 
		        android:layout_toRightOf="@id/step_one_image"
		        android:layout_centerVertical="true"
		        android:textSize="18dp"
		        android:textColor="@color/light_grey"
		        android:text="Log into Starbucks account"
		        android:layout_marginLeft="15dp"
		        />
	    </RelativeLayout>
	    
    <RelativeLayout
	         android:id="@+id/step_two"
	         android:layout_height="wrap_content"
	         android:layout_width="fill_parent"
	         android:layout_alignParentLeft="true"
	         android:layout_below="@id/step_one"
	         android:layout_marginTop="35dp" >
    
		    <ImageView
		        android:id="@+id/step_two_image"
		        android:layout_width="45dp"
		        android:layout_height="45dp"
		        android:scaleType="fitXY"
		        android:src="@drawable/step_two" 
		        android:layout_centerVertical="true"
		        />
		    
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/step_two_detail" 
		        android:layout_toRightOf="@id/step_two_image"
		        android:layout_centerVertical="true"
		        android:textSize="18dp"
		        android:textColor="@color/light_grey"
		        android:text="Add first Starbucks card"
		        android:layout_marginLeft="15dp"
		        />
	    </RelativeLayout>
	    
    <RelativeLayout
	         android:id="@+id/step_three"
	         android:layout_height="wrap_content"
	         android:layout_width="fill_parent"
	         android:layout_alignParentLeft="true"
	         android:layout_below="@id/step_two"
	         android:layout_marginTop="35dp" >
    
		    <ImageView
		        android:id="@+id/step_three_image"
		        android:layout_width="45dp"
		        android:layout_height="45dp"
		        android:scaleType="fitXY"
		        android:src="@drawable/step_three" 
		        android:layout_centerVertical="true"
		        />
		    
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/step_three_detail" 
		        android:layout_toRightOf="@id/step_three_image"
		        android:layout_centerVertical="true"
		        android:textSize="18dp"
		        android:textColor="@color/light_grey"
		        android:text="Enjoy on Wear!"
		        android:layout_marginLeft="15dp"
		        />
	    </RelativeLayout>
    
    <Button
        android:id="@+id/continue_to_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's Go!"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:onClick="replaceFragment"
        android:background="@android:color/transparent"
        android:textAllCaps="true"
        android:textColor="@color/dark_green"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        />

</RelativeLayout>
    
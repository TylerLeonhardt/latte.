<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/addcard_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/add_card_title"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <RelativeLayout
        android:id="@+id/card_input_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addcard_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" >

        <EditText
            android:id="@+id/card_input_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/add_card_placeholder"
            android:inputType="number"
            android:maxLength="4" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/card_dash_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/card_input_1"
            android:text="@string/add_card_seperator" />

        <EditText
            android:id="@+id/card_input_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/card_dash_1"
            android:hint="@string/add_card_placeholder"
            android:inputType="number"
            android:maxLength="4" />

        <TextView
            android:id="@+id/card_dash_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/card_input_2"
            android:text="@string/add_card_seperator" />

        <EditText
            android:id="@+id/card_input_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/card_dash_2"
            android:hint="@string/add_card_placeholder"
            android:inputType="number"
            android:maxLength="4" />

        <TextView
            android:id="@+id/card_dash_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/card_input_3"
            android:text="@string/add_card_seperator" />

        <EditText
            android:id="@+id/card_input_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/card_dash_3"
            android:hint="@string/add_card_placeholder"
            android:inputType="number"
            android:maxLength="4" />
    </RelativeLayout>
    
    <TextView
        android:id="@+id/addcard_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="@string/add_card_custom_color"
        android:textSize="12dp"
        android:textColor="@color/light_grey"
        android:textStyle="italic"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@id/card_input_layout"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp" />

    <RadioGroup
        android:id="@+id/card_color_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/addcard_color"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/color0"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/color_radio_button_selector_purple"
            android:button="@null"
            android:checked="true" />

        <RadioButton
            android:id="@+id/color1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/color_radio_button_selector_dark_blue"
            android:button="@null" />

        <RadioButton
            android:id="@+id/color2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/color_radio_button_selector_teal"
            android:button="@null" />

        <RadioButton
            android:id="@+id/color3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/color_radio_button_selector_green"
            android:button="@null" />

        <RadioButton
            android:id="@+id/color4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/color_radio_button_selector_red"
            android:button="@null" />

        <RadioButton
            android:id="@+id/color5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/color_radio_button_selector_orange"
            android:button="@null" />

        <RadioButton
            android:id="@+id/color6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/color_radio_button_selector_gold"
            android:button="@null" />

        <RadioButton
            android:id="@+id/color7"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/color_radio_button_selector_yellow"
            android:button="@null" />

        <RadioButton
            android:id="@+id/color8"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/color_radio_button_selector_grey"
            android:button="@null" />
    </RadioGroup>

</RelativeLayout>
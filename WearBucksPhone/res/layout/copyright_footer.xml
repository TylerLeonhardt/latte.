<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wearbucks.app.MainActivity"
    android:layout_alignParentBottom="true"
    android:padding="10dp" >


            <ImageView
                android:id="@+id/copyright_logo"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_below="@android:id/list"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/latte_logo_grey" />

            <TextView
                android:id="@+id/copyright_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/copyright_logo"
                android:layout_centerHorizontal="true"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Pay for Starbucks with Android Wear. Copyright \u00a9 2014."
                android:textColor="@color/light_grey"
                android:textSize="12dp"
                android:textStyle="italic" />
</RelativeLayout>